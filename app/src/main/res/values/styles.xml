<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/zhihuBackgroundColor</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="zhihuBackgroundColor">@color/colorWhite</item>

        <item name="navIcon">@drawable/ic_actionbar_menu</item>
        <item name="navBackIcon">@drawable/back</item>
        <item name="overFlowIcon">@drawable/ic_actionbar_menu_overflow</item>
    </style>

    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/zhihuBackgroundColor</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="zhihuBackgroundColor">@color/colorDarkGray</item>

        <item name="navIcon">@drawable/ic_actionbar_menu</item>
        <item name="navBackIcon">@drawable/back</item>
        <item name="overFlowIcon">@drawable/ic_actionbar_menu_overflow</item>
    </style>
</resources>
